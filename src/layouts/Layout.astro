---
interface Props {
	title: string;
}

import ViewTransitions from 'astro/components/ViewTransitions.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/diamante.avif" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- FONT -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Aboreto&family=Abril+Fatface&family=Bebas+Neue&family=Dancing+Script:wght@400..700&family=DynaPuff:wght@400..700&family=Familjen+Grotesk:ital,wght@0,400..700;1,400..700&family=Inter:wght@100..900&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Limelight&family=Livvic:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&family=Lovers+Quarrel&family=Micro+5+Charted&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Mystery+Quest&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poiret+One&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Aboreto&family=Abril+Fatface&family=Bebas+Neue&family=Dancing+Script:wght@400..700&family=DynaPuff:wght@400..700&family=Familjen+Grotesk:ital,wght@0,400..700;1,400..700&family=Inter:wght@100..900&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Limelight&family=Livvic:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&family=Lovers+Quarrel&family=Micro+5+Charted&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Mystery+Quest&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poiret+One&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">  
		<ViewTransitions />
	</head>
	<body class="overflow-x-hidden">
		<slot />
	</body>
</html>
<style is:global>
	body{
		background-color: black;
		color: white;
		height: 500vh;
		scroll-behavior: smooth;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	.font__h1,
	.font__primary{
		font-family: "Aboreto", system-ui;
	}
	h1{
		font-size: 4rem;
		line-height: 55px;
	}
	h2{
		font-size: 3rem;
		line-height: 35px;
	}
	h3{
		font-size: 3rem;
		line-height: 60px;
	}
	h4{
		font-size: 2rem;
	}
	p,
	a{
		color: currentColor;
		font-weight: 300;
		font-size: 18px;
	}
	a,
	p,
	.font__secundary{
		font-family: "Quicksand", sans-serif;

	}
	@media screen and (max-width: 700px){
		h1{
			font-size: 2rem;
			line-height: 35px;
		}
		h2{
			font-size: 2rem;
			line-height: 35px;
		}
		h3{
			font-size: 1.7rem;
			line-height: 30px;
		}
		h4{
			font-size: 1.4rem;
			line-height: 25px;
		}
		a,
		p{
			font-size: 16px;
		}
	}
</style>

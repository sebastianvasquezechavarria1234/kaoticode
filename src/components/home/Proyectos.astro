---
import ProyectosCard from "./ProyectosCard.astro";
import MaxWidth from "../../layouts/MaxWidth.astro";
---

<!-- INDEX PROYECTOS -->
<section class="relative z-30 mt-[220px] max-sm:mt-[120px]">
      <!-- BLUR -->
      <div class="w-[300px] h-[300px] bg-purple-600 rounded-full absolute top-[300px] left-[100px] blur-[150px] opacity-100 max-xl:w-[350px] max-xl:h-[350px] max-xl:blur-[150px]"></div>
      <!-- BLUR -->
       <div class="w-[400px] h-[400px] bg-blue-600 rounded-full absolute bottom-[100px] right-[100px] blur-[200px] opacity-100 max-xl:w-[100px] max-xl:h-[100px] max-xl:blur-[60px]"></div>
      <!-- BLUR -->
       <div class="w-[400px] h-[400px] bg-blue-600 rounded-full absolute bottom-[200px] left-[20%] blur-[200px] opacity-100 max-xl:w-[100px] max-xl:h-[100px] max-xl:blur-[60px]"></div>
      <!-- BLUR -->
       <div class="w-[400px] h-[400px] bg-purple-600 rounded-full absolute bottom-[600px] right-[-100px] blur-[200px] opacity-100 max-xl:w-[60px] max-xl:h-[60px] max-xl:blur-[220px]"></div>

    <MaxWidth>
        <!-- RIGHT -->
        <div class="right relative flex flex-col w-full  justify-end">
            <h3 class="italic">Proyectos</h3>
             <!-- LINE -->
             <hr class="bg-white/10 w-full h-[1px] block my-[50px] relative max-sm:my-[20px]">
            <!-- CARD PROYECTOS -->
            <ProyectosCard
                href=""
                title="Primer proyecto"
                number="#001"
                fecha="/12/06/2023"
                img="/proyecto__1.avif" 
                
            />
            <!-- LINE -->
            <hr class="bg-white/10 w-full h-[1px] block my-[50px] relative max-sm:my-[20px]">
    
            <!-- CARD PROYECTOS -->
            <ProyectosCard
                href=""
                title="segundo proyecto"
                number="#002"
                fecha="/01/02/2024"
                img="/proyecto__2.avif" 
                
            />
            <!-- LINE -->
            <hr class="bg-white/10 w-full h-[1px] block my-[50px] relative max-sm:my-[20px]">
    
            <!-- CARD PROYECTOS -->
            <ProyectosCard
                href=""
                title="tercer proyecto"
                number="#002"
                fecha="/03/03/2024"
                img="/proyecto__3.avif" 
                
            />
            <!-- LINE -->
            <hr class="bg-white/10 w-full h-[1px] block my-[50px] relative max-sm:my-[20px]">
    
            <!-- CARD PROYECTOS -->
            <ProyectosCard
                href=""
                title="cuarto proyecto"
                number="#002"
                fecha="/04/03/2024"
                img="/proyecto__4.avif" 
            />
    
            <!-- LINE -->
            <hr class="bg-white/10 w-full h-[1px] block my-[50px] relative max-sm:my-[20px]">
    
            <!-- CORAZON -->
            <img 
            class="anm absolute right-[-10%] bottom-[-5%] w-[300px] z-40"
            src="/corazon.avif" 
            alt="estrella">
        </div>
    </MaxWidth>   
</section>

<style>
    .anm{
        animation: anm 8s infinite ;
    }
    .anm__2{
        animation: anm__2 8s infinite ;
    }
    @keyframes anm {
        0%,
        100%{
            transform: translateY(-10px);
        }
        50%{
            transform: translateY(20px);
        } 
    }
    @keyframes anm__2 {
        0%,
        100%{
            transform: translateY(20px) rotate(15deg);
        }
        50%{
            transform: translateY(-10px) rotate(15deg);;
        } 
    }
    @media screen and (max-width: 1200px){
        .left{
            display: none;
        }
        .right{
            width: 100%;
        }
        /* hr{
            display: none;
        } */
    }
    

</style>
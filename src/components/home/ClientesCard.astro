---
const { img, usersName, fecha, description } = Astro.props;
---

<!-- CARD SLIDER -->
<article class="p-[24px] rounded-[20px] border-[1px] border-white/20 w-[500px] duration-300 transition-all cursor-default  max-sm:w-[100px]">
    <!-- AVATAR -->
     <div class="flex gap-[10px] items-center mb-[20px] max-sm:flex-col max-sm:items-start">
        <picture class="w-[60px] h-[60px] block relative rounded-full overflow-hidden">
            <img 
                class="h-full w-full"
                src={img} 
                alt="avatra">
        </picture>
        <div class="flex flex-col">
            <h5 class="italic flex items-center gap-[5px]">
                {usersName}
                <!-- VALID -->
                <svg  class="text-blue-600"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-rosette-discount-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12.01 2.011a3.2 3.2 0 0 1 2.113 .797l.154 .145l.698 .698a1.2 1.2 0 0 0 .71 .341l.135 .008h1a3.2 3.2 0 0 1 3.195 3.018l.005 .182v1c0 .27 .092 .533 .258 .743l.09 .1l.697 .698a3.2 3.2 0 0 1 .147 4.382l-.145 .154l-.698 .698a1.2 1.2 0 0 0 -.341 .71l-.008 .135v1a3.2 3.2 0 0 1 -3.018 3.195l-.182 .005h-1a1.2 1.2 0 0 0 -.743 .258l-.1 .09l-.698 .697a3.2 3.2 0 0 1 -4.382 .147l-.154 -.145l-.698 -.698a1.2 1.2 0 0 0 -.71 -.341l-.135 -.008h-1a3.2 3.2 0 0 1 -3.195 -3.018l-.005 -.182v-1a1.2 1.2 0 0 0 -.258 -.743l-.09 -.1l-.697 -.698a3.2 3.2 0 0 1 -.147 -4.382l.145 -.154l.698 -.698a1.2 1.2 0 0 0 .341 -.71l.008 -.135v-1l.005 -.182a3.2 3.2 0 0 1 3.013 -3.013l.182 -.005h1a1.2 1.2 0 0 0 .743 -.258l.1 -.09l.698 -.697a3.2 3.2 0 0 1 2.269 -.944zm3.697 7.282a1 1 0 0 0 -1.414 0l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.32 1.497l2 2l.094 .083a1 1 0 0 0 1.32 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z" /></svg>
            </h5>
            <p class="opacity-50">{fecha}</p>
        </div>

    </div>
    <!-- DESCRIPTION -->
    <p class="block mb-[20px]">{description}</p>

    <!-- START -->
    <div class="flex items-center gap-[5px]">

---
const { img, title, description } = Astro.props;
---


<!-- CARD GRID -->
<article class="relative h-[30vw] p-[10px] rounded-[20px] flex items-end overflow-hidden">
    <!-- PICTURE -->
    <img 
        class="absolute top-0 left-0 w-full h-full object-cover object-center"
        src={img}
        alt="picture">

        <!-- TITLE -->
         <div class="relative z-30 bg-white text-black p-[20px] rounded-[20px] w-full">
             <p class="uppercase italic font-bold">{title}</p>
             <p>{description}</p>

         </div>
</article>

<style>
    article:nth-child(1) img{
        transform: scale(1.3);
    }
    article:nth-child(1),
    article:nth-child(4){
        width: calc(65% - 20px);
    }
    article:nth-child(2),
    article:nth-child(3){
        width: 35%;
    }
    article:nth-child(5){
        width: 100%;
    }
    @media screen and (max-width: 1100px){
        article:nth-child(1),
        article:nth-child(2),
        article:nth-child(3),
        article:nth-child(4),
        article:nth-child(5){
            width: 100%;
            height: 100vw;
            flex-direction: column;
            gap: 20px;
            padding: 0px;
        }
        article:nth-child(1) img,
        article:nth-child(2) img,
        article:nth-child(3) img,
        article:nth-child(4) img,
        article:nth-child(5) img{
            position: relative;
            transform: scale(1);
            border-radius: 20px;
        }
        
    }
</style>
---
const { title, title2, titleSpan1, titleSpan2, style, icon1, description1, description2, description3 } = Astro.props;
---

<!-- CARD FLEX -->
<article class=`${style} relative z-10 bg-cover bg-center p-[24px] rounded-[20px]`>
    <div class="width flex flex-col gap-[30px] justify-between">
        <!-- PICTURE -->
        <img 
            class="w-[200px] h-[200px]"
            src={icon1} 
            alt="picture">
    
        <!-- TITLE -->
         <div class="title flex flex-col w-full">
            <h4 class="mb-[30px]">
                {title} <span class="italic">{titleSpan1}</span> {title2} <span class="uppercase font__secundary">{titleSpan2}</span>
            </h4>
            <p class="mb-[20px] block">{description1}</p>
            <p>{description2}</p>
            <p>{description3}</p>
         </div>

    </div>
</article>

<style>
    article:nth-child(1){
        width: 100%;
    }
    article:nth-child(1) .width{
        max-width: 1500px;
        margin: 0 auto
    }
    article:nth-child(2),
    article:nth-child(3){
        width: calc(50% - 10px);
    }
    @media screen and (max-width: 1400px){
        article:nth-child(2) div,
        article:nth-child(3) div{
            flex-direction: column;;
        }
    }
    @media screen and (max-width: 1200px){
        article:nth-child(1) div{
            flex-direction: column;;
        }
        article:nth-child(1) div .title,
        article:nth-child(2) div .title,
        article:nth-child(3) div .title{
            width: 100%;
        }
        article:nth-child(1) div img:nth-child(3){
            display: none;
        }
    }
    @media screen and (max-width: 900px){
        article:nth-child(2),
        article:nth-child(3){
            width: 100%;
        }
    }
</style>